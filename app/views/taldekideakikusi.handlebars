{{> menuadmin}}
   
   <div class="jumbotron">
        <h3>Taldekideak ikusi</h3> 
   </div>
      <a href="/admin/taldekideakabizenez" class="btn btn-primary btn-sm" role="button">Taldekideak Abizenez</a>
      <a href="/admin/taldeak" class="btn btn-primary btn-sm" role="button">Taldeak ikusi</a>
