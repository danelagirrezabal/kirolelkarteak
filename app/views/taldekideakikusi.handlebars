      <a href="/admin/jokalarikopurua" class="btn btn-primary btn-sm" role="button">Jokalari kopurua ikusi</a>

<div class="formContainer">
    <form class="form-horizontal newsletterForm" role="form" action="/admin/taldekideakordainduta" method="POST">

      <div class="row marketing">
        <div class="col-lg-12">
        <table class="table table-condensed">
            <tr>
                    <th>Maila</th>
                    <th  width="15%">TALDEA</th>
                    <th>NAN DNI</th>
                    <th>IZEN-ABIZENAK</th>
                    <th>JAIO.DATA</th>
                    <th>MOTA</th>
                    <th>Kamixeta zenbakia</th>
                    <th>Materiala</th>
<!--                    <th>Ordainketa</th> -->
                    <th>Ordain-tzeko</th>
                    <th>=</th>
                    <th>Ordain-duta</th>
                    <th>Bazkide zenbakia</th>

                </tr>                               
            {{#each data}}
                  <tr class="active">
                    <td>{{akronimoMaila}} {{akronimoTalde}}</td>
                    <td>{{izenaTalde}}</td>  
                    <td> </td>  
                    <td>{{arduradunEmailTalde}}</td>  
                    <td> </td>  
                    <td> </td> 
                    <td> </td> 
                    <td> </td>   
                    <td> </td>
                    <td> </td> 
                    <td> </td> 
<!--                    
                    <td><a class="a-inside edit" href="/admin/partaideakeditatu/{{idPartaideakKide}}">Partaide</a></td> 
                    <td><a class="a-inside edit" href="/admin/taldekideakeditatu/{{idTaldekideak}}">Aldatu</a></td>
                    <td><a class="a-inside edit" href="/admin/taldekideakezabatu/{{idTaldeak}}/{{idTaldekideak}}">Ezabatu</a></td>
--> 
                  {{#each jokalariak}} 
                    <tr style="color:{{kolore}}">
                      <td width="20px"> </td>
                      <td> </td>
                      <td>{{nanPart}}</td>
                      <td>{{izenaPart}} {{abizena1Part}} {{abizena2Part}}</td>  
                      <td>{{jaiotzeDataPart}}</td>  
                      <td>{{deskribapenMota}}</td> 
                      <td>{{kamixetaZenbKide}}</td> 
                      <td>{{materialaKide}}</td>   
<!--                      <td>{{ordainduKide}}</td>   -->
                      <td>{{ordaintzekoKide}}</td>
                      <td class="checkbox">
                       {{#if ezordaindua}}
                        <input type="checkbox" id="aukeratuo" name="aukeratuo[]" value="{{idTaldekideak}}">
                       {{/if}}
                      </td> 
                      <td>{{ordaindutaKide}}</td> 
                      <td>{{bazkideZenbKide}}</td>
                      <td class="checkbox">
                       {{#if ezbazkidea}}
                        <input type="checkbox" id="aukeratub" name="aukeratub[]" value="{{idTaldekideak}}">
                       {{/if}}
                      </td>
                      <td> </td>
                    </tr>
                  {{/each}} 
                </tr>
            {{/each}}
          </table>
        </div>
      </div>
        <div class="form-group">
            <div class="col-sm-offset-8 col-sm-4">
                <button type="submit" class="btn btn-default" id="aldatu1">1. ORDAINDUTA BERDINDU</button>
            </div>
            <div class="col-sm-offset-10 col-sm-2">
                <button type="submit" class="btn btn-default" formaction="/admin/taldekideakbazkideegin"id="aldatu2">2. BAZKIDEAK EGIN</button>
            </div>
        </div>
    </form>
</div>

{{#section 'jquery'}}
<script>
  $(document).ready(function(){   

    $("#aldatu1").on('click',function (){ 
        var r = confirm("Ziur al zaude Ordainduta berdindu nahi dituzula?");
        if (r == false) {
          $(location).attr('href', '/admin/taldekideakikusi/');
        } 
    });

    $("#aldatu2").on('click',function (){ 
        var r = confirm("Ziur al zaude bazkideak egin nahi dituzula?");
        if (r == false) {
          $(location).attr('href', '/admin/taldekideakikusi/');
        } 
    });
  });
            
</script> 
{{/section}}     
