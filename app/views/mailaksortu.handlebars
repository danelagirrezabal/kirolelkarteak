{{> menuadmin}}

      <div class="jumbotron">
        <h2>Mailak gehitu</h2>
      </div>

<div class="formContainer">
    <form class="form-horizontal newsletterForm" role="form" action="/admin/mailaksortu" method="POST">
    <input type="hidden" name="_csrf" value="{{_csrfToken}}">
        
        <div class="form-group">
            <label for="izenaMaila" class="col-sm-2 control-label">Mailaren izena</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" required id="izenaMaila" autofocus name="izenaMaila">
            </div>
        </div>
        <div class="form-group">
            <label for="akronimoMaila" class="col-sm-2 control-label">Akronimoa</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" required id="akronimoMaila" autofocus name="akronimoMaila">
            </div>
        </div>
        <div class="form-group">
            <label for="zenbakiMaila" class="col-sm-2 control-label">Mailaren zenbakia</label>
            <div class="col-sm-4">
                <input type="number" class="form-control" id="zenbakiMaila" name="zenbakiMaila">
            </div>
        </div>        

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <button type="submit" class="btn btn-default">Gorde</button>
            </div>
        </div>
    </form>
</div>