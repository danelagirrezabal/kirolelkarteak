{{#if menuadmin}}
    {{> menuadmin}}                
{{else}}
    {{> menu}}                  
{{/if}}

<input type="hidden" name="admin" id="admin" value="{{menuadmin}}">

   <div class="jumbotron">
        <h2>Partiduak taldeka</h2>
      </div>
      </br></br>
       <div class="form-group">

            <label for="taldea" class="col-sm-2 control-label">Taldea:</label>
            <div class="col-sm-4">
            <select name="taldea" id="taldea">
                <option value="">-- Aukeratu taldea --</option>
                {{#each taldeak}}
                    {{#if aukeratua}}
                       <option value="{{idTaldeak}}" selected>{{izenaTalde}} - {{izenaMaila}}</option>
                    {{else}}
                       <option value="{{idTaldeak}}">{{izenaTalde}} - {{izenaMaila}}</option>
                    {{/if}}
                {{/each}}
            </select>
            </div>

           
        </div>
      </br></br>
      <div class="row marketing">
        <div class="col-lg-12">
        <table class="table table-condensed">
            <tr>
                    <th  >Eguna</th>
                    <th>Jardunaldia</th>
                    <th>Lekua</th>
                    <th>Ordua</th>
                    <th>Maila</th>
                    <th>Txapelketa</th>
                    <th>A ekipoa</th>
                    <th>B ekipoa</th>
                    <th>Emaitza</th>
                    <th>Arbitraia</th>
                    <th>      </th>
                    <th>      </th>
                </tr>          

            {{#each data}}
                  <tr class="active" style="color: {{kolore}}">
                    <td>{{dataPartidu}}</td>
                    <td>{{jardunaldiaPartidu}}</td>
                   {{#if jardunaldiaIkusgai}}  
                    <td>{{izenaLeku}}</td>  
                    <td>{{orduaPartidu}}</td>
                   {{else}}
                    <td></td>  
                    <td></td>
                   {{/if}} 
                    <td>{{izenaMaila}}</td> 
                    <td>{{txapelketaPartidu}}</td>  
                    <td>{{etxekoaPartidu}}</td>   
                    <td>{{kanpokoaPartidu}}</td> 
                    <td>{{emaitzaPartidu}}</td> 
                    <td>{{arbitraiaPartidu}}</td>
                    {{#if admin}}
                      <td><a class="a-inside edit" href="/admin/partiduakeditatu/{{idPartiduak}}">Aldatu</a></td>
                      <td><a class="a-inside edit" href="/admin/partiduakezabatu/{{idPartiduak}}">Ezabatu</a></td>
                    {{/if}}

                </tr>
            {{/each}}
          </table>

        </div>
      </div>




{{#section 'jquery'}}
<script>
  $(document).ready(function(){    


  var taldea = $('#taldea').val();  

    $('#taldea').change(function(){

        var data = 'id=' + $('#taldea').val();
        
        if ($('#admin').val()){
          $(location).attr('href', '/admin/partiduaktaldeka/'+$('#taldea').val());
        }
        else{
          $(location).attr('href', '/partiduaktaldeka/'+$('#taldea').val());
        }
     
    });
});
            
</script> 
        
{{/section}}
      