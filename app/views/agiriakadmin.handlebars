{{> menuadmin}}

<div class="jumbotron">
        <h2>Agiriak</h2>
      </div>

     <div class="container">

<div class="row marketing">

        <div class="col-lg-8">
          <div class="col-lg-2">
          <form class="form-horizontal newsletterForm" role="form" action="/admin/agiriakgehitu" method="POST">
        <input type="hidden" name="_csrf" value="{{_csrfToken}}">
          </div>
         <div class="form-group">
            <div class="col-sm-offset-3"> 
                <button type="submit" class="btn btn-default">Gehitu</button>
            </div>
        </div>
        </form> 
            <table class="table table-striped">
            <tr>
                    <th>Atala</th>
                    <th>Izena</th>
                    <th>Agiriaren URL</th>
                    <th>Data</th>
                    <th>Publikoa?</th>
                    <th></th>
                    <th></th>

                </tr>                               
            {{#each data}}
                  <tr>
                    <td>{{atalaAgiria}}</td>
                    <td>{{izenaAgiria}}</td>
                    <td><a href='/data/agiriak/{{idElkarteak}}/{{urlAgiria}}' target="_blank">{{urlAgiria}}</a></td>
                    <td>{{dataAgiria}}</td>
                    <td>{{publikoAgiria}}</td>
                    <td>
                        <a class="a-inside edit" href="../admin/agiriakeditatu/{{idAgiriak}}">Aldatu</a>
                    </td>
                    <td>
                        <a class="a-inside delete" href="../admin/agiriakezabatu/{{idAgiriak}}">Ezabatu</a> 
                    </td>
                    
                </tr>
            {{/each}}
          </table>
        </div>

        
      </div>
      
</div>