{{> menu}}
   
   <div class="jumbotron">
      {{#each talde}}
        <h2>Taldekideak</h2>
        <h3>{{izenaTalde}} - {{izenaMaila}}</h3> 
   </div>
      {{/each}}


      {{#if arduradun}}
          <a href="/taldekideakgehitu/{{idTaldeak}}" class="btn btn-primary btn-bg" role="button">Taldekidea gehitu</a>
      {{/if}}
   
      
      </br>

       <div class="row marketing">
       {{#each irudiak}}
          <div class="col-md-4 col-md-offset-4">
             <a href="/data/taldeargazkiak/{{idKirolElkarteak}}/{{idTaldeak}}/{{files}}" class="thumbnail">
              <img src="/data/taldeargazkiak/{{idKirolElkarteak}}/{{idTaldeak}}/{{files}}" alt="Taldearen argazkia"  ref="/data/taldeargazkiak/{{idKirolElkarteak}}/{{idTaldeak}}/{{files}}" class="thumbnail"> </img> </a>
          </div>

        {{/each}} 
      </div>


      </br>
      <div class="row marketing">
        <div class="col-lg-12">
        <table class="table table-condensed">
            <tr>
                    <th  width="15%">Jokalariaren izena</th>
                    <th>Abizenak</th>
                    <th>Taldea</th>
                    <th>Kamixeta zenbakia</th>
                    <th>Jokalari mota</th>
                    {{#if arduradun}}
                       <th>Kuota ordainduta?</th>
                    {{/if}}

                </tr>                               
            {{#each data}}
                  <tr class="active">
                    <td>{{izenaPart}}</td>  
                    <td>{{abizena1Part}} {{abizena2Part}}</td>  
                    <td>{{izenaTalde}}</td>   
                    <td>{{kamixetaZenbKide}}</td> 
                    <td>{{deskribapenMota}}</td> 

                    {{#if arduraduna}}
                      <td>{{ordainduKide}}</td>
                      <td><a class="a-inside edit" href="/taldekideakeditatu/{{idTaldekideak}}">Aldatu</a></td> 
                      <td><a class="a-inside delete" href="/taldekideakezabatu/{{idTaldeak}}/{{idTaldekideak}}">Ezabatu</a></td> 
                    {{/if}}
                </tr>
            {{/each}}
          </table>
        </div>
      </div>
