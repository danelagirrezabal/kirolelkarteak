{{> menuadmin}}

      <div class="jumbotron">
        <h2>Partaide motak editatu</h2>
      </div>

<div class="formContainer">
{{#each data}}
    <form class="form-horizontal newsletterForm" role="form" action="/admin/partaidemotakaldatu/{{idPartaideMotak}}" method="POST">
    <input type="hidden" name="_csrf" value="{{_csrfToken}}">
       
        <div class="form-group">
            <label for="deskribapenMota" class="col-sm-2 control-label">Partaide motaren deskribapena</label>
            <div class="col-sm-4">
                <textarea name="deskribapenMota" rows="1" cols="40" class="form-control">{{deskribapenMota}}</textarea>
            </div>
        </div>

        <div class="form-group">
            <label for="zenbakiMota" class="col-sm-2 control-label">Motaren zenbakia</label>
            <div class="col-sm-4">
                <input type="number" class="form-control" id="zenbakiMota" name="zenbakiMota" value="{{zenbakiMota}}">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <button type="submit" class="btn btn-default">Aldatu</button>
            </div>
        </div>
    </form>
    {{/each}}
</div>

</div>