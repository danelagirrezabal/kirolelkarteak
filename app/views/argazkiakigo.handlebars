{{> menuadmin}}

<div class="jumbotron">
        <h2>Argazkiak igo</h2>
      </div>

<form class="form-horizontal" role="form" 
		enctype="multipart/form-data" method="POST"
		action="/argazkiakigo/{{idKirolElkarteak}}">
	<input type="hidden" name="_csrf" value="{{_csrfToken}}">
	
	<div class="form-group">
		<label for="izena" class="col-sm-2 control-label">Argazkiaren izena</label>
		<div class="col-sm-4">
			<input type="text" class="form-control" 
			id="izena" name="izena">
		</div>
	</div>

	<div class="form-group">
		<label for="argazkia" class="col-sm-2 control-label">Argazkia</label>
		<div class="col-sm-4">
			<input type="file" class="form-control" required accept="image/*"
				id="argazkia" data-url="/upload" name="argazkia">
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-4">
			<button type="submit" class="btn btn-primary">Igo</button>
		</div>
	</div>
</form>
