{{> menuadmin}}

<div class="jumbotron">
        <h2>Bazkideak ikusi</h2>
      </div>

     <div class="container">
  <a href="/partaideak" class="btn btn-primary btn-sm" role="button">Partaideak ikusi</a>

<div class="row marketing">

        <div class="col-lg-8">
          <div class="col-lg-2">
          <h3 style="color:#0000FF"> Bazkideak </h3>
          <form class="form-horizontal newsletterForm" role="form" action="/bazkideakgehitu" method="POST">
        <input type="hidden" name="_csrf" value="{{_csrfToken}}">
          </div>
         <div class="form-group">
            <div class="col-sm-offset-3"> 
                <br/>
            
                  <button type="submit" class="btn btn-default">Banaka Gehitu</button>
        

            </div>
        </div>
        <div class="form-group">
            <label for="denboraldia" class="col-sm-2 control-label">Denboraldia:</label>
            <div class="col-sm-4">
            <select name="denboraldia" id="denboraldia">
                <option value="">--Aukeratu denboraldia--</option>
                {{#each denboraldiak}}
                       <option value="{{idDenboraldia}}">{{deskribapenaDenb}}</option>
                {{/each}}

            </select>
            </div>
        </div>
        </form> 
            <table class="table table-striped">
            <tr>
                    <th>Izena</th>
                    <th>Abizenak</th>
                    <th>NAN</th>
                    <th>Emaila</th>
                    <th>Telefonoa</th>
                    <th>Herria</th>
                    <th>Ordaintzeko era</th>
                    <th>Ordainduta?</th>
                    <th></th>
                    <th></th>

                </tr>                               
            {{#each data}}
                  <tr>
                    <td>{{izenaPart}}</td>
                    <td>{{abizena1Part}}  {{abizena2Part}}</td>
                    <td>{{nanPart}}</td>
                    <td>{{emailPart}}</td>
                    <td>{{telefonoaPart}}</td>
                    <td>{{herriaPart}}</td>
                    <td>{{deskribapenaOrdainEra}}</td>
                    <td>{{ordainduBazk}}</td>
                    
                     <td>
                        <a class="a-inside edit" href="../admin/bazkideakeditatu/{{idBazkideak}}">Aldatu</a>
                     </td>
                     <td>
                        <a class="a-inside delete" href="../admin/bazkideakezabatu/{{idBazkideak}}">Ezabatu</a> 
                     </td>
                     

                </tr>
            {{/each}}
          </table>
        </div>

        
      </div>
      
</div>