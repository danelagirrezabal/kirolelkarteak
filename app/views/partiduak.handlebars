{{> menu}}

   <div class="jumbotron">
        <h2>Partiduak</h2>
      </div>
      </br></br>
       <div class="form-group">
            <label for="jardunaldia" class="col-sm-2 control-label">Jardunaldia:</label>
            <div class="col-sm-4">
            <select name="jardunaldia" id="jardunaldia">
                <option value="">--Aukeratu jardunaldia--</option>
                {{#each jardunaldiak}}
                       <option value="{{jardunaldiDataPartidu}}">{{jardunaldiDataPartidu}}</option>
                {{/each}}
            </select>
            </div>
        </div>
      </br></br>
      <div class="row marketing">
        <div class="col-lg-12">
        <table class="table table-condensed">
            <tr>
                    <th  width="15%">Eguna</th>
                    <th>Maila</th>
                    <th>Txapelketa</th>
                    <th>A ekipoa</th>
                    <th>B ekipoa</th>
                    <th>Lekua</th> 
                    <th>Ordua</th>
                    <th>Irteera ordua</th>
                    <th>Bidaia nola</th>
                    <th>Bidai eguna</th>
                    <th>Emaitza</th>
                </tr>          

            {{#each data}}
                  <tr class="active">
                    <td>{{dataPartidu}}</td>  
                    <td>{{izenaMaila}}</td> 
                    <td>{{txapelketaPartidu}}</td>  
                    <td>{{etxekoaPartidu}}</td>   
                    <td>{{kanpokoaPartidu}}</td> 
                    <td>{{izenaLeku}} - {{herriaLeku}}</td>   
                    <td>{{orduaPartidu}}</td> 
                    <td>{{bidaiOrduaPartidu}}</td>
                    <td>{{bidaiaNolaPartidu}}</td>
                    <td>{{bidaiEgunaPartidu}}</td>
                    <td>{{emaitzaPartidu}}</td> 
                </tr>
            {{/each}}
          </table>

        </div>
      </div>

{{#section 'jquery'}}
<script>
  $(document).ready(function(){        

    $('#jardunaldia').change(function(){

      var data = 'id=' + $('#jardunaldia').val();

      //$.get('jardunaldikopartiduak/'+$('#jardunaldia').val());
