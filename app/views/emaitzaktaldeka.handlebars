<input type="hidden" name="admin" id="admin" value="{{admin}}">

   <div class="jumbotron">
        <h2>Emaitzak taldeka</h2>
      </div>
<!--      </br></br>                  -->
       <div class="form-group">

            <label for="taldea" class="col-sm-2 control-label">Taldea:</label>
            <div class="col-sm-4">
            <select name="taldea" id="taldea">
                <option value="">-- Aukeratu taldea --</option>
                {{#each taldeak}}
                    {{#if aukeratua}}
                       <option value="{{idTaldeak}}" selected>{{izenaTalde}} - {{izenaMaila}}</option>
                    {{else}}
                       <option value="{{idTaldeak}}">{{izenaTalde}} - {{izenaMaila}}</option>
                    {{/if}}
                {{/each}}
            </select>
            </div>

           
        </div>
      </br></br>
      <div class="row marketing">
        <div class="col-lg-12">
        <table class="table table-condensed">
            <tr>
                    <th>Eguna</th>
                    <th>Maila</th>
                    <th>Txapelketa</th>
                    <th>A ekipoa</th>
                    <th>B ekipoa</th>
                    <th>Emaitza</th>
                    <th>       </th>
                    <th>Arbitraia</th>
                </tr>          

            {{#each data}}
                  <tr class="active" style="color: {{kolore}}">
                    <td>{{dataPartidu}}</td>  
                    <td>{{izenaMaila}}</td> 
                    <td>{{txapelketaPartidu}}</td>  
                    <td>{{etxekoaPartidu}}</td>   
                    <td>{{kanpokoaPartidu}}</td> 
                    <td>{{emaitzaPartidu}}</td>
                    
                    {{#if arduraduna}}
                      <td><a class="a-inside edit" href="/emaitzaksartu/{{idPartiduak}}">Emaitza sartu</a></td> 
                    {{/if}}

                    {{#if adminis}}
<!--                      <td><a class="a-inside edit" href="/admin/emaitzaksartu/{{idPartiduak}}">Emaitza sartu</a></td>   -->
                    <form class="form-horizontal newsletterForm" role="form" action="/admin/emaitzaktaldekagorde/{{idPartiduak}}" method="POST">

                     <td><textarea name="emaitzaPartidu" rows="1" cols="7" class="form-control" required id="emaitzaPartidu" placeholder="0-0" value={{emaitzaPartidu}}>{{emaitzaPartidu}}</textarea></td>
                     <td>
                      <input type="number" class="form-control"  id="arbitraiaPartidu" name="arbitraiaPartidu" value={{arbitraiaPartidu}} step="0.01" min="0" max="999">
                     </td>
                     <td>
                        <button type="submit" class="btn btn-default">Gorde</button>
                     </td>
                    </form>

                    {{/if}}
                </tr>
            {{/each}}
          </table>

        </div>
      </div>




