            <div class="col-sm-4">
                <input type="num" class="form-control" autofocus id="eserlekua3" name="eserlekua3" min="1" max="9" value={{eserlekua3}}>
            </div>
        </div>

        <div class="form-group">
            <label for="bazkidezenbakia3" class="col-sm-2 control-label">3. Bazkide zenbakia</label>
            <div class="col-sm-4">
                <textarea name="bazkidezenbakia3" rows="1" cols="10" class="form-control" autofocus>{{bazkidezenbakia3}}</textarea>
            </div>
        </div>

        <div class="form-group">
            <label for="nanzenbakia3" class="col-sm-2 control-label">3. NAN zenbakia</label>
            <div class="col-sm-4">
                <textarea name="nanzenbakia3" rows="1" cols="40" class="form-control" autofocus >{{nanzenbakia3}}</textarea>
            </div>
        </div>

        <div class="form-group">
            <label for="jaiotzedata3" class="col-sm-2 control-label">edo 3. Jaiotze data</label>
            <div class="col-sm-4">
                <textarea name="jaiotzedata3" rows="1" cols="12" class="form-control" placeholder="UUUU/HH/EE" autofocus>{{jaiotzedata3}}</textarea>
            </div>
        </div>

        <div class="form-group">
            <label for="izenabizenak4" class="col-sm-2 control-label">4. Izen-abizenak</label>
            <div class="col-sm-4">
                <textarea name="izenabizenak4" rows="1" cols="70" class="form-control" 
                placeholder="4. ikuslea bada" autofocus>{{izenabizenak4}}</textarea>
            </div>
        </div>

        <div class="form-group">
            <label for="eserlekua4" class="col-sm-2 control-label">4. eserlekua</label>
            <div class="col-sm-2">
                <input type="num" class="form-control" autofocus id="eserlekua4" name="eserlekua4" min="1" max="9" value={{eserlekua4}}>
            </div>
        </div>

        <div class="form-group">
            <label for="bazkidezenbakia4" class="col-sm-2 control-label">4. Bazkide zenbakia</label>
            <div class="col-sm-4">
                <textarea name="bazkidezenbakia4" rows="1" cols="12" class="form-control" autofocus>{{bazkidezenbakia4}}</textarea>
            </div>
        </div>

        <div class="form-group">
            <label for="nanzenbakia4" class="col-sm-2 control-label">4. NAN zenbakia</label>
            <div class="col-sm-4">
                <textarea name="nanzenbakia4" rows="1" cols="40" class="form-control" autofocus>{{nanzenbakia4}}</textarea>
            </div>
        </div>

        <div class="form-group">
            <label for="jaiotzedata4" class="col-sm-2 control-label">edo 4. Jaiotze data</label>
            <div class="col-sm-4">
                <textarea name="jaiotzedata4" rows="1" cols="12" class="form-control" placeholder="UUUU/HH/EE" autofocus>{{jaiotzedata4}}</textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-2">
                <button type="submit" class="btn btn-default">Ekitaldia ALDATU</button>
            </div>
        </div>
    </form>
    {{/each}}
</div>

