{{> menuadmin}}

      <div class="jumbotron">
        <h2>Lekuak editatu</h2>
      </div>

<div class="formContainer">
{{#each data}}
    <form class="form-horizontal newsletterForm" role="form" action="/admin/lekuakaldatu/{{idLekuak}}" method="POST">
    <input type="hidden" name="_csrf" value="{{_csrfToken}}">
       
        <div class="form-group">
            <label for="izenaLeku" class="col-sm-2 control-label">Lekuaren izena</label>
            <div class="col-sm-4">
                <textarea name="izenaLeku" rows="1" cols="40" class="form-control">{{izenaLeku}}</textarea>
            </div>
        </div>
        <div class="form-group">
            <label for="helbideaLeku" class="col-sm-2 control-label"> Lekuaren helbidea </label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="helbideaLeku" name="helbideaLeku" value={{helbideaLeku}}>
            </div>
        </div> 
        <div class="form-group">
            <label for="herriaLeku" class="col-sm-2 control-label"> Lekuaren herria </label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="herriaLeku" name="herriaLeku" value={{herriaLeku}}>
            </div>
        </div>   
        <div class="form-group">
            <label for="zenbakiLeku" class="col-sm-2 control-label"> Lekuaren zenbakia </label>
            <div class="col-sm-4">
                <input type="number" class="form-control" id="zenbakiLeku" name="zenbakiLeku" value={{zenbakiLeku}}>
            </div>
        </div>          
        

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <button type="submit" class="btn btn-default">Gorde</button>
            </div>
        </div>
    </form>
    {{/each}}
</div>

      </div>