{{> menuadmin}}
   
   <div class="jumbotron">
        <h3>Taldekideak Abizenez</h3> 
   </div>

      <a href="/admin/taldekideikusi" class="btn btn-primary btn-sm" role="button">Taldekideak Ikusi</a>
      <a href="/admin/taldeak" class="btn btn-primary btn-sm" role="button">Taldeak ikusi</a>
      <a href="/admin/taldekopurua" class="btn btn-primary btn-sm" role="button">Talde kopurua ikusi</a>
      <a href="/admin/jokalarikopurua" class="btn btn-primary btn-sm" role="button">Jokalari kopurua ikusi</a>

      <div class="row marketing">
        <div class="col-lg-12">
        <table class="table table-condensed">
            <tr>
                    <th>NAN DNI</th>
                    <th>Mota</th>
                    <th>IZENA</th>
                    <th>1.ABIZENA</th>
                    <th>2.ABIZENA</th>
                    <th>HELBIDEA</th>
                    <th>HERRIA</th>
                    <th>JAIO.DATA</th>
                    <th>Kuota</th>
                    <th> </th> 
                    <th>Ordainduta</th>
                    <th>Bazkide zenbakia</th>
                    <th> </th>
                    <th> </th>
                </tr>                               
            {{#each data}}
                  <tr  class="active" style="color:{{kolore}}">
                    <td>{{nanPart}}</td>
                    <td>{{deskribapenMota}}</td>
                    <td>{{izenaPart}}</td>  
                    <td>{{abizena1Part}}</td>
                    <td>{{abizena2Part}}</td>  
                    <td>{{helbideaPart}}</td>
                    <td>{{herriaPart}}</td>
                    <td>{{jaiotzeDataPart}}</td>   
                    <td>{{ordaintzekoKide}} &nbsp;&nbsp; {{familiko}}</td>
                    <td style="background-color:{{bgkolore}}"> &nbsp;&nbsp; </td>  
                    <td>{{ordaindutaKide}}</td>
                    <td>{{bazkideZenbKide}}</td>
                    <td><a class="a-inside edit" href="/admin/taldekideakeditatu/{{idTaldekideak}}">Aldatu</a></td> 
                    <td><a class="a-inside edit" href="/admin/partaideakeditatu/{{idPartaideakKide}}">Partaide</a></td> 
       
                </tr>
            {{/each}}
          </table>

            <form class="form-horizontal newsletterForm" role="form" action="/admin/familikoak" method="POST">
              <label for="ordainduBerria" class="col-sm-offset-7 col-sm-2 control-label">Ordaindu Familia:</label>
               <div class="col-sm-1">
                <input type="num" class="form-control" required id="ordainduBerria" name="ordainduBerria" value={{ordainduBerria}}>
               </div>
 
               <button type="submit" class="btn btn-default" id="aldatu">Ordaintzekoa Aldatu</button>
            </form>
        </div>
      </div>

{{#section 'jquery'}}
<script>
  $(document).ready(function(){        

   $("#aldatu").on('click',function (){ 
        myFunction(); 
   });
  });
        
function myFunction() {
    var r = confirm("Ziur al zaude ordaintzekoak aldatu nahi dituzula?");
    if (r == false) {
        $(location).attr('href', '/admin/taldekideakabizenez');
    }

}
</script>

{{/section}}