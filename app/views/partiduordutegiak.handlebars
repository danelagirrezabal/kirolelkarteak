      <div class="form-group">
            <label for="denboraldia" class="col-sm-2 control-label">Denboraldia:</label>
            <div class="col-sm-4">
            <select name="denboraldia" id="denboraldia">
                <option value="">--Aukeratu denboraldia--</option>
                {{#each denboraldiak}}
                    {{#if aukeratua}}
                       <option value="{{idDenboraldia}}" selected>{{deskribapenaDenb}}</option>
                    {{else}}
                       <option value="{{idDenboraldia}}">{{deskribapenaDenb}}</option>
                    {{/if}}
                {{/each}}
            </select>
            </div>

        </div>
       <div class="form-group">
            <label for="jardunaldia" class="col-sm-2 control-label">Jardunaldia:</label>
            <div class="col-sm-4">
            <select name="jardunaldia" id="jardunaldia">
                <option value="">--Aukeratu jardunaldia--</option>
                {{#each jardunaldiak}}
                    {{#if aukeratua}}
                       <option value="{{jardunaldiDataPartidu}}" selected>{{jardunaldiDataPartidu}}</option>
                    {{else}}
                       <option value="{{jardunaldiDataPartidu}}">{{jardunaldiDataPartidu}}</option>
                    {{/if}}
                {{/each}}
            </select>
            </div>
        </div>
        
      </br></br>
      <div class="row marketing">
        <div class="col-lg-12">
        {{#each data2}}

        <h2> {{dataPartidu}} </h2>

          {{#each lekuak}}

            <h3> {{lekua}} </h3>

            <table class="table table-condensed">
                <tr>
                    
                    <th>Maila</th>
                    <th>Txapelketa</th>
                    <th>A ekipoa</th>
                    <th>B ekipoa</th>
                    <th>Ordua</th>
                    <th>Irteera ordua</th>
                    <th>Bidaia nola</th>
                    <th>Bidai eguna</th>
                    <th>Emaitza</th>
                    <th>   </th>
                </tr>          

              {{#each partiduak}}
                  <tr class="active">
                    
                    <td>{{izenaMaila}}</td> 
                    <td>{{txapelketaPartidu}}</td>  
                    <td>{{etxekoaPartidu}}</td>   
                    <td>{{kanpokoaPartidu}}</td>   
                    <td>{{orduaPartidu}}</td> 
                    <td>{{bidaiOrduaPartidu}}</td>
                    <td>{{bidaiaNolaPartidu}}</td>
                    <td>{{bidaiEgunaPartidu}}</td>
                    <td>{{emaitzaPartidu}}</td>
                    {{#if admin}}
                    <td><a class="a-inside edit" href="/admin/partiduakeditatu/{{idPartiduak}}">Aldatu</a></td>
                    {{/if}}
                </tr>
            {{/each}}
          </table>
          {{/each}}
          {{/each}}

        </div>
      </div>

      <form class="form-horizontal newsletterForm" role="form">
        <input type="hidden" name="admin" id="admin" value="{{menuadmin}}">
      </form> 

