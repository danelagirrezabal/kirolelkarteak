{{> menuadmin}}

      <div class="jumbotron">
        <h2>Partaideak kargatu</h2>
      </div>

<div class="formContainer col-sm-offset-1">
    <form class="form-horizontal newsletterForm" role="form" action="/admin/partaideakkargatuegin" method="POST">
    <input type="hidden" name="_csrf" value="{{_csrfToken}}">
        </br>
        <div class="form-group">
            <label for="idTaldeakPartaide" class="col-sm-2 control-label">Taldearen izena</label>
            <div class="col-sm-4">
              <select name="idTaldeakPartaide" id="idTaldeakPartaide">
                <option value="">--Aukeratu taldea--</option>
                {{#each taldeak}}
                       <option value="{{idTaldeak}}">{{izenaTalde}} - {{izenaMaila}}</option>
                {{/each}}

              </select>
            </div>
        </div>

        <div class="form-group">
            <label for="txapelketa" class="col-sm-2 control-label">Txapelketa</label>
            <div class="col-sm-4">
                <textarea name="txapelketa" rows="1" cols="40" class="form-control" required></textarea>
            </div>
        </div>

        <div class="form-group">
            <label for="hasierakoordua" class="col-sm-2 control-label">Hasierako ordua</label>
            <div class="col-sm-4">
                <input type="time" class="form-control" required id="hasierakoordua" name="hasierakoordua" value="00:00">
            </div>
        </div>
       
        <div class="form-group">
            <label for="etxekoaknon" class="col-sm-2 control-label">Etxekoak NON</label>
            <div class="col-sm-4">
             <select id="etxekoaknon" name="etxekoaknon" >
                <option value="">--Aukeratu NON--</option>              
                <option value="0">Kiroldegian</option>
                <option value="1">Antotan-Kiroldegian</option> 
                <option value="2">Orion</option>
             </select>
            </div>
        </div>

        <div class="form-group">
            <label for="partaideakCSV" class="col-sm-2 control-label">Partaideak csv formatuan</label>
            <div class="col-sm-8">
                <textarea name="partaideakCSV" rows="10" cols="100" class="form-control" required></textarea>
            </div>
        </div>
        

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <button type="submit" class="btn btn-default">Kargatu</button>
            </div>
        </div>
    </form>
</div>

      </div>

<script>

Handlebars.registerHelper('mailaBerdina',function(kategoria, idmaila){
  return kategoria  == idmaila;
});


</script>
