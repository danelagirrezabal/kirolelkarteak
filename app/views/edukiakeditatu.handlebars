{{> menuadmin}}

<div class="jumbotron">
        <h2>Edukia aldatu</h2>
</div>
<div class="formContainer">
{{#each data}}
    <form class="form-horizontal newsletterForm" role="form" action="/admin/edukiakaldatu/{{idEdukiak}}" method="POST">
    <input type="hidden" name="_csrf" value="{{_csrfToken}}">
        <div class="form-group">
            <label for="izenburuaEdukia" class="col-sm-2 control-label">Izenburua</label>
            <div class="col-sm-6">
                <!--<input type="text" class="form-control" required id="izenburuaEdukia" name="izenburuaEdukia" autofocus value={{izenburuaEdukia}} >-->
                <textarea name="izenburuaEdukia" rows="1" cols="60" class="form-control" required id="izenburuaEdukia" value={{izenburuaEdukia}}>{{izenburuaEdukia}}</textarea>
            </div>
        </div>
        
        <div class="form-group">
            <label for="testuaEdukia" class="col-sm-2 control-label">Testua</label>
            <div class="col-sm-8">
                <textarea name="testuaEdukia" data-provide="markdown" rows="20" cols="220" class="form-control" required id="testuaEdukia" value={{testuaEdukia}}>{{testuaEdukia}}</textarea>
              <!--  <input type="textarea" class="form-control" required id="testua" name="testua" value={{testuaEdukia}}> -->
            </div>
        </div> 

        <div class="form-group">
            <label for="zenbakiEdukia" class="col-sm-2 control-label">Zenbatgarren (0-EZ, 9)</label>
            <div class="col-sm-2">
                <input type="number" class="form-control" required id="zenbakiEdukia" name="zenbakiEdukia" value={{zenbakiEdukia}}>
            </div>
        </div> 

        <div class="form-group">
        <div class="checkbox col-sm-offset-3">
              <label>
                <input type="checkbox" name="bidali" id="bidali" value="true">
                <strong>Bidali edukia postaz?</strong>
              </label>
            </div>
         </div>
         </div>        

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-2">
                <button type="submit" class="btn btn-default">Edukia ALDATU</button>
            </div>
            <div class="col-sm-2">
                <button type="submit" formaction="/admin/edukiaksortu/{{idAzpiAtalakEdukia}}" class="btn btn-default">ADI - Eduki BERRIA</button>
            </div>
        </div>
    </form>
    {{/each}}
</div>


