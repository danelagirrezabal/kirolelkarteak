{{> menuadmin}}

      <div class="jumbotron">
        <h2>Maila editatu</h2>
      </div>

<div class="formContainer">
{{#each data}}
    <form class="form-horizontal newsletterForm" role="form" action="/admin/mailakaldatu/{{idMailak}}" method="POST">
    <input type="hidden" name="_csrf" value="{{_csrfToken}}">
       
        <div class="form-group">
            <label for="izenaMaila" class="col-sm-2 control-label">Mailaren izena</label>
            <div class="col-sm-4">
                <textarea name="izenaMaila" rows="1" cols="40" class="form-control">{{izenaMaila}}</textarea>
            </div>
        </div>
        <div class="form-group">
            <label for="akronimoMaila" class="col-sm-2 control-label">Akronimoa</label>
            <div class="col-sm-4">
                <textarea name="akronimoMaila" rows="1" cols="40" class="form-control">{{akronimoMaila}}</textarea>
            </div>
        </div>
        <div class="form-group">
            <label for="zenbakiMaila" class="col-sm-2 control-label">Mailaren zenbakia</label>
            <div class="col-sm-4">
                <input type="number" class="form-control" id="zenbakiMaila" name="zenbakiMaila" value={{zenbakiMaila}}>
            </div>
        </div>   
        
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <button type="submit" class="btn btn-default">Gorde</button>
            </div>
        </div>
    </form>
    {{/each}}
</div>

      </div>