{{> menuadmin}}

<div class="jumbotron">
        <h2>Agiriak sortu</h2>
</div>
<div class="formContainer">

    <form class="form-horizontal newsletterForm" role="form" action="/admin/agiriaksortu" method="POST">

    <input type="hidden" name="_csrf" value="{{_csrfToken}}">
        <div class="form-group">
            <label for="atalaAgiria" class="col-sm-2 control-label">Atala</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" required id="atalaAgiria" name="atalaAgiria" autofocus >
            </div>
        </div>
        
        <div class="form-group">
            <label for="izenaAgiria" class="col-sm-2 control-label">Agiriaren izena</label>
            <div class="col-sm-4">
                <textarea name="izenaAgiria" rows="1" cols="20" class="form-control" required id="izenaAgiria" ></textarea>
            </div>
        </div>

        <div class="form-group">
        <div class="checkbox col-sm-offset-3">
              <label>
                <input type="checkbox" name="publiko" id="publiko" value="true">
                <strong>Agiri hau publiko egingo da erabiltzaile guztientzat</strong>
              </label>
         </div>
         </div>     

         <div class="form-group">
            <!--<label for="urlAgiria" class="col-sm-2 control-label">Agiriaren URL</label>-->
            <div class="col-sm-4">
                <textarea name="urlAgiria" rows="1" cols="20" class="form-control" style="display:none;" id="urlAgiria">{{urlAgiria}}</textarea>
                <!--<input type="text" class="form-control" required id="urlAgiria" name="urlAgiria" autofocus value={{urlAgiria}} >-->
            </div>
        </div> 
