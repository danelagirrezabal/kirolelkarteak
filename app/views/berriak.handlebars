{{> menuadmin}}

<div class="jumbotron">
        <h2>Berriak</h2>
      </div>

     <div class="container">

<div class="row marketing">

        <div class="col-lg-8">
          <div class="col-lg-2">
          <form class="form-horizontal newsletterForm" role="form" action="/admin/berriakgehitu" method="POST">
        <input type="hidden" name="_csrf" value="{{_csrfToken}}">
          </div>
         <div class="form-group">
            <div class="col-sm-offset-3"> 
                <button type="submit" class="btn btn-default">Gehitu</button>
            </div>
        </div>
        </form> 
            <table class="table table-striped">
            <tr>
                    <th>Izenburua</th>
                    <th>Testua</th>
                    <th>Data</th>
                    <th>Zenbakia</th>
                    <th>Argazkia</th>
                    <th></th>
                    <th></th>

                </tr>                               
            {{#each data}}
                  <tr>
                    <td>{{izenburuaBerria}}</td>
                    <td>{{testuaBerria}}</td>
                    <td>{{dataBerria}}</td>
                    <td>{{zenbakiBerria}}</td>
                    <td>{{argazkiaBerria}}</td>
                     <td>
                        <a class="a-inside edit" href="../admin/berriakeditatu/{{idBerriak}}">Aldatu</a>
                    </td>
                    <td>
                        <a class="a-inside delete" href="../admin/berriakezabatu/{{idBerriak}}">Ezabatu</a> 
                    </td>
                    
                </tr>
            {{/each}}
          </table>
        </div>

        
      </div>
      
</div>