{{> menuadmin}}

<div class="jumbotron">
        <h2>Denboraldia aldatu</h2>
</div>
<div class="formContainer">
{{#each data}}
    <form class="form-horizontal newsletterForm" role="form" action="/admin/denboraldiakaldatu/{{idDenboraldia}}" method="POST">
    <input type="hidden" name="_csrf" value="{{_csrfToken}}">
         <div class="form-group">
            <label for="deskribapenaDenb" class="col-sm-2 control-label">Deskribapena</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" required id="deskribapenaDenb" name="deskribapenaDenb" autofocus value={{deskribapenaDenb}} >
            </div>
        </div>   
        
        <div class="form-group">
            <label for="noiztikDenb" class="col-sm-2 control-label">Denboraldi hasieraren data</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" required id="noiztikDenb" placeholder="UUUU/HH/EE formatuan" name="noiztikDenb" autofocus value={{noiztikDenb}} >
            </div>
        </div>
        
        <div class="form-group">
            <label for="noraDenb" class="col-sm-2 control-label">Denboraldi bukaeraren data</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" required id="noraDenb" placeholder="UUUU/HH/EE formatuan" name="noraDenb" autofocus value={{noraDenb}} >
            </div>
        </div>    

        <div class="form-group">
            <label for="egoeraDenb" class="col-sm-2 control-label">Egoera</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" required id="egoeraDenb" placeholder="1 aktibatuta / 0 deskatibatuta" name="egoeraDenb" autofocus value={{egoeraDenb}} >
            </div>
        </div>      

        <div class="form-group">
            <label for="kuotaDenb" class="col-sm-2 control-label">Urteko kuota</label>
            <div class="col-sm-4">
                <input type="number" class="form-control" required id="kuotaDenb" name="kuotaDenb" autofocus value={{kuotaDenb}} >
            </div>
        </div> 

        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-4">
                <button type="submit" class="btn btn-default">Gorde</button>
            </div>
        </div>
    </form>
    {{/each}}
</div>

      </div>
