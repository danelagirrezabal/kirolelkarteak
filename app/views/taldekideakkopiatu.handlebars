                    <td> </td>
                    </tr>
                    {{/each}} 
                </tr>
            {{/each}}
          </table>
        </div>
      </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <button type="submit" class="btn btn-default">AUKERATUTAKOAK KOPIATU</button>
            </div>
        </div>
    </form>
</div>
