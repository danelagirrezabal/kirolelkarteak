                    <th>Materiala</th>
                    <th>Generoa</th> 
                    <th>Bazkide zenbakia</th>
 
                </tr>                               
            {{#each data}}
                  <tr class="active">
                    <td>{{izenaPart}}</td>  
                    <td>{{abizena1Part}}</td>
                    <td>{{abizena2Part}}</td>
                    <td>{{nanPart}}</td>
                    <td>{{deskribapenMota}}</td>  
                    <td>{{izenaTalde}}</td>   
                    <td>{{kamixetaZenbKide}}</td> 
                    <td>{{materialaKide}}</td>   
